<h3>Thêm Sản Phẩm</h3>
<div class="product-fix">
      <a href="/products">
        <i class="fas fa-arrow-alt-circle-left"></i>
        Quay lại Sản Phẩm</a>
  </div>
<form action="/products/storeProduct" method="POST" enctype="multipart/form-data">
    <label for="">Tên sản phẩm</label>
    <input type="text" class="form-control" name="nameProduct" id="nameProduct" placeholder="Tên sản phẩm" required>
    <label for="">Nhà cung cấp</label>
    <input type="text" class="form-control" name="supplier" id="supplier" placeholder="Nhà cung cấp" required><br>
    <label for="">Size</label><br>
    <input type="checkbox" name="size[]"id="size" placeholder="size" value="S"> S
    <input type="checkbox" name="size[]"id="size" placeholder="size" value="M" > M
    <input type="checkbox" name="size[]"id="size" placeholder="size" value="L" > L
    <input type="checkbox" name="size[]"id="size" placeholder="size" value="XL" > XL<br>
    <label for="">Số lượng</label>
    <div class="quantity-wrapp">
    <input type="text" class="mr-4" name="quantity" id="quantity" placeholder="số lượng size" ><br>
    <div class="form-row">
        <div class="form-group col-md-4">
        <label for="">Giá gốc(vnđ)</label>
        <input type="text" class="form-control" name="originalPrice" id="originalPrice" placeholder="giá gốc" required>
        </div>
        <div class="form-group col-md-4">
        <label for="">Sale(%)</label>
        {{!-- <input type="text" class="form-control" name="sale" id="sale" placeholder="sale" required> --}}
        <select name="sale" id="sale">
          <option value="">--sale--</option>
          <option value="0">0</option>
          <option value="5">5</option>
          <option value="20">20</option>
          <option value="50">50</option>
          <option value="70">70</option>
          <option value="80">80</option>
        </select>
        </div>
        <div class="form-group col-md-4">
        {{!-- <label for="">Giá hiện tại(vnđ)</label>
        <input type="text" class="form-control" name="currentPrice" id="currentPrice" placeholder="giá hiện tại" value="calculate()" required> --}}
        </div>
    </div>
    <label for="">Ảnh</label>
    <input type="file" class="form-control" name="image" id="image" placeholder=""multiple required>
    <label for="">Mô tả</label>
    <textarea class="form-control" name="description" id="description" placeholder="Mô tả"  required></textarea>
    <label for="">Ghi chú</label>
    <input type="text"class="form-control" name="note"><br>
    <button class="btn btn-primary" type="submit">Thêm sản phẩm</button>
</form>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
