<h3>Sửa Sản Phẩm</h3>
<div class="fix">
      <a href="/products">
        <i class="fas fa-arrow-alt-circle-left"></i>
        Quay lại Sản Phẩm</a>
  </div>
<form action="/products/{{product._id}}/updateProduct" method="POST" enctype = "multipart/form-data" >
<div class="wrap  mt-4"  >
    <label for="">Tên sản phẩm:</label>
    <input type="text" class="mr-3" style="width:500px" name="nameProduct" id="nameProduct" value="{{product.nameProduct}}"placeholder="Tên sản phẩm" required><br>
    <label for="">Nhà cung cấp:</label>
    <input type="text" class="" name="supplier"style="width:500px" id="supplier"value="{{product.supplier}}" placeholder="Nhà cung cấp" required><br>
</div>
    {{!-- <label for="">Size</label> --}}
    {{!-- <input type="text" class="form-control" name="size"id="size" value="{{product.size}}" placeholder="size" required> --}}
    <label for="">Size</label><br>
    {{#each product.size as |item|}}
    <input type="checkbox" name="size[]"id="size"{{checked item 'S'}} value="S"> S
    <input type="checkbox" name="size[]"id="size"{{checked item 'M'}} value="M"> M
    <input type="checkbox" name="size[]"id="size"{{checked item 'L'}} value="L"> L
    <input type="checkbox" name="size[]"id="size"{{checked item 'XL'}} value="XL"> XL<br>
    {{/each}}
    <label for="">Số lượng</label>
    <div class="quantity-wrapp d-flex">
    <input type="text" class="mr-4" name="quantity" id="quantity"value="{{product.quantity}}" ><br>

    </div>
    <div class="form-row">
        <div class="">
        <label for="">Giá gốc(vnđ)</label>
        <input type="text" class="form-control" name="originalPrice" id="originalPrice" placeholder="giá gốc" value="{{ product.originalPrice}}" required><br>
        </div>    
        <div class="sale" style="margin:40px 0  0 30px">
        <label for="">Sale(%)</label>
        <select name="sale" id="sale">
          {{#select product.sale}}
          <option value="">--sale--</option>
          <option value="0">0</option>
          <option value="5">5</option>
          <option value="20">20</option>
          <option value="50">50</option>
          <option value="70">70</option>
          <option value="80">80</option>
          {{/select}}
        </select>
        </div>
        {{!-- <div class="form-group col-md-4">
        <label for="">Giá hiện tại(vnđ)</label>
        <input type="text" class="form-control" name="currentPrice" id="currentPrice"  value="{{#numberFormat  (subtract this.originalPrice (multiply this.originalPrice (divide this.sale 100)))}} {{/numberFormat}}" placeholder="giá hiện tại" required>       
        </div> --}}
    </div>
    <label for="">Ảnh</label>
    <div class="form-img mt-4">
    <input type="file" class="form-control edit-img" name="image" id="image" value="{{product.image}}"accept=".jpg, .jpeg, .png">
    <div>
      <img src="../../{{product.image}}" width="50" height="60" alt="ảnh sản phẩm"></div>
    </div><br>
    <label for="">Mô tả</label>
    <textarea type="description" class="form-control" name="description" id="description" value=""  required>{{product.description}}</textarea>
    <label for="">Ghi chú</label>
    <input type="text"class="form-control" name="note" value="{{product.note}}">
    <button class="btn btn-primary mt-4" type="submit">Sửa sản phẩm</button>
</form>